{
    "name": "DeckyBattery",
    "author": "Nox (GoDev)",
    "version": "v1.1",
    "manifest_version": 4,
    "target": "Other",
    "description": "This Theme enable you to theme the battery color",
    "patches": {
        "Enable": {
            "type": "none",
            "values": {
                "_": {
                    "shared.css": ["SP", "QuickAccess"]
                }
            },
            "components": [
                {
                    "name": "Battery Color",
                    "type": "color-picker",
                    "on": "_",
                    "default": "#59bf40",
                    "css_variable": "db-battery-color",
                    "tabs": ["SP", "QuickAccess"]
                }
            ]
        }
    }
}